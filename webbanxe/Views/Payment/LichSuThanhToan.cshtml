@model IList<webbanxe.Models.Payment>
@using webbanxe.Constant;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/cart.css" rel="stylesheet">
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Blog list Start -->
            <div class="col-lg-12">
                <div class="row">
                    <div class="column">
                        <table>

                            <tr>

                                <th>STT</th>
                                <th style="display: none !important;">IdOrder</th>

                                <th>Ngày thanh toán</th>
                                <th>Mã code</th>
                                <th>Mã giao dịch</th>
                                <th>Tên ngân hàng</th>

                                <th>Thành tiền</th>
                                <th>Nội dung thanh toán</th>
                               
                                <th>Trạng thái</th>
                                <th>ID Order</th>
                              

                            </tr>
                            @for (var i = 0; i < Model.Count; i++)
                            {

                                <tr>

                                    <td>
                                        @{
                                            int index = 1;
                                            index = index + i;
                                            @index
                                        }
                                    </td>
                                    <td>@Model[i].Created</td>
                                    <td>@Model[i].maCode</td>
                                    <td>@Model[i].maGiaoDich</td>
                                    <td>@Model[i].tenNganHang</td>
                                    <td>@Model[i].tongTien.ToString("#,##0.0") vnđ</td>
                                    <td>@Model[i].content</td>
                                    <td>@if(Model[i].status == 1)
                                        {
                                            <span>Thành công</span>
                                        }else

                                        {   
                                            <span>Thất bại</span>
                                        }

                                    </td>
                                    <td>@Model[i].IdOrder </td>


                                </tr>
                            }
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
