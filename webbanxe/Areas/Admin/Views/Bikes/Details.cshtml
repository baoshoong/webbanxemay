@model webbanxe.Models.Bike
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1> Bike</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Home</a></li>
                <li class="breadcrumb-item"><a>Bike</a></li>
                <li class="breadcrumb-item active">Detail</li>
            </ol>
        </nav>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <section class="section dashboard">
        <div class="row">
            <div class="col-md-12">
                <dl class="row">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NameBike)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.NameBike)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.price)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.price)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PricePromotion)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.PricePromotion)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Quantity)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ImageBike)
                    </div>
                    <div class="col-sm-10">
                        @{
                            var img = Model.ImageBike.Split(";");
                            foreach(var item in img)
                            {
                                <img  src="~/img/@item" style="width: 100px">
                               
                            }
                         }
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DescriptionBike)
                    </div>
                    <div class="col-sm-10">
                        @Html.Raw(Model.DescriptionBike)
                    </div>
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TypeBike)
                    </div>
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.TypeBike.NameType)
                    </div>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.IdBike">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>

                </div>
                </section>
                </main>
              
